
@model IEnumerable<Licencjat.Models.Dish>
@{
ViewData["Title"] = "Dishes";
}

<h1>Dishes</h1>


<div class="d-flex justify-content-between mb-3">
    
    <form asp-action="Sort" method="post" class="form-inline">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Search dishes..." />
        

        <select name="sortOrder" class="form-control mr-2">
            <option value="">Sort By</option>
            <option value="Name" selected="@((string)ViewData["CurrentSort"] == "Name" ? "selected" : "")">Name (A-Z)</option>
            <option value="name_desc" selected="@((string)ViewData["CurrentSort"] == "name_desc" ? "selected" : "")">Name (Z-A)</option>
            <option value="Kcal" selected="@((string)ViewData["CurrentSort"] == "Kcal" ? "selected" : "")">Kcal (Low-High)</option>
            <option value="kcal_desc" selected="@((string)ViewData["CurrentSort"] == "kcal_desc" ? "selected" : "")">Kcal (High-Low)</option>
        </select>

        <select name="tagId" class="form-control mr-2">
            <option value="">All Tags</option>
            @foreach (var tag in ViewData["Tags"] as SelectList)
            {
                <option value="@tag.Value" selected="@(ViewData["CurrentTag"] != null && (int)ViewData["CurrentTag"] == int.Parse(tag.Value) ? "selected" : "")">@tag.Text</option>
            }
        </select>

        <button type="submit" class="btn btn-primary">Sort & Search</button>
        
        
    </form>
    
        <button type="button" class="btn btn-success" id="btnCreate">Create New Dish</button>
    
</div>

<div class="mb-3">
    <strong>Selected Tag: </strong>@ViewData["SelectedTagName"]
</div>

<div class="row">
    @foreach (var dish in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(dish.ImagePath))
                {
                    <img class="card-img-top" src="@dish.ImagePath" alt="@dish.Name" />
                }
                <div class="card-body">
                    <h5 class="card-title"><a asp-action="Details" asp-route-id="@dish.Id">@dish.Name</a></h5>
                    <p class="card-text">@dish.Kcal Kcal</p>
                    <p class="card-text">
                        <strong>Tags:</strong><br />
                        @foreach (var dishTag in dish.DishTags)
                        {
                            <span>@dishTag.Tag.Name</span><br />
                        }
                    </p>
                    <p class="card-text">
                        <strong>Ingredients:</strong><br />
                        @foreach (var dishIngredient in dish.DishIngredients)
                        {
                            <span>@dishIngredient.Ingredient.Name (@dishIngredient.Ingredient.Kcal Kcal/100g)</span><br />
                        }
                    </p>
                </div>
                <div class="card-footer">
                    <!-- Each "Edit" button -->
                    <button type="button" class="btn btn-primary edit-dish-btn" data-toggle="modal" data-target="#editModal" data-id="@dish.Id">
                        Edit Dish
                    </button>
                    
                    <a asp-action="Delete" asp-route-id="@dish.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
    $(function () {
        $('#btnCreate').click(function () {
            $.get('@Url.Action("Create", "Dish")', function (data) {
                $('#createPartialContainer').html(data);
                $('#createModal').modal('show');
            });
        });

        $('#createForm').submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);

            $.ajax({
                url: '@Url.Action("Create", "Dish")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    $('#createModal').modal('hide');
                    location.reload(); // Refresh the page or update the list as needed
                },
                error: function () {
                    alert('Error creating dish.');
                }
            });
        });
    });
</script>
}

<script>
    $(document).ready(function(){
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Button that triggered the modal
            var id = button.data('id'); // Extract info from data-* attributes
            var modal = $(this);

            // Use jQuery to fetch the form via Ajax
            $.ajax({
                url: '@Url.Action("Edit", "Dish")', // Replace with your actual controller
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#editModalBody').html(result);
                }
            });
        });

        // Handle form submission
        $(document).on('submit', '#editForm', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: $(this).attr('action'),
                type: $(this).attr('method'),
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        $('#editModal').modal('hide');
                        location.reload(); // Reload the page or update the necessary part of your page
                    } else {
                        $('#editModalBody').html(response);
                    }
                }
            });
        });
    });
</script>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Dish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="editModalBody">
                    <!-- Form content will be loaded here via Ajax -->
                </div>
            </div>
        </div>
    </div>
</div>

<div id="createModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Dish</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="createPartialContainer"></div>
            </div>
        </div>
    </div>
</div>

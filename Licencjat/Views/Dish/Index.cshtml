@model IEnumerable<Licencjat.Models.Dish>

<h2>Dishes</h2>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Kcal</th>
        <th>Tags</th>
        <th>Ingredients</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var dish in Model)
    {
    <tr>
        <td>@dish.Name</td>
        <td>@dish.Kcal</td>
        <td>
            @foreach (var dishTag in dish.DishTags)
            {
            <span>@dishTag.Tag.Name</span><br />
            }
        </td>
        <td>
            @foreach (var dishIngredient in dish.DishIngredients)
            {
            <span>@dishIngredient.Ingredient.Name (@dishIngredient.Ingredient.Kcal Kcal/100g)</span><br />
            }
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@dish.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@dish.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@dish.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
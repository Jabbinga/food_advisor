
@model IEnumerable<Licencjat.Models.Dish>
@{
ViewData["Title"] = "Dishes";
}

<h2>Dishes</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="d-flex justify-content-between mb-3">
    <form asp-action="Index" method="get" class="form-inline">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-2" placeholder="Search dishes..." />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
    <form asp-action="Index" method="get" class="form-inline">
        <select name="sortOrder" onchange="this.form.submit()" class="form-control mr-2">
            <option value="">Sort By</option>
            <option value="Name" selected="@((string)ViewData["CurrentSort"] == "Name" ? "selected" : "")">Name (A-Z)</option>
            <option value="name_desc" selected="@((string)ViewData["CurrentSort"] == "name_desc" ? "selected" : "")">Name (Z-A)</option>
            <option value="Kcal" selected="@((string)ViewData["CurrentSort"] == "Kcal" ? "selected" : "")">Kcal (Low-High)</option>
            <option value="kcal_desc" selected="@((string)ViewData["CurrentSort"] == "kcal_desc" ? "selected" : "")">Kcal (High-Low)</option>
        </select>
        <select name="tagId" onchange="this.form.submit()" class="form-control">
            <option value="">All Tags</option>
            @foreach (var tag in ViewData["Tags"] as SelectList)
            {
            <option value="@tag.Value" selected="@(ViewData["CurrentTag"] != null && (int)ViewData["CurrentTag"] == int.Parse(tag.Value) ? "selected" : "")">@tag.Text</option>
            }
        </select>
    </form>
</div>

<div class="mb-3">
    <strong>Selected Tag: </strong>@ViewData["SelectedTagName"]
</div>

<div class="row">
    @foreach (var dish in Model)
    {
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            @if (!string.IsNullOrEmpty(dish.ImagePath))
            {
            <img class="card-img-top" src="@dish.ImagePath" alt="@dish.Name" />
            }
            <div class="card-body">
                <h5 class="card-title"><a asp-action="Details" asp-route-id="@dish.Id">@dish.Name</a></h5>
                <p class="card-text">@dish.Kcal Kcal</p>
                <p class="card-text">
                    <strong>Tags:</strong><br />
                    @foreach (var dishTag in dish.DishTags)
                    {
                    <span>@dishTag.Tag.Name</span><br />
                    }
                </p>
                <p class="card-text">
                    <strong>Ingredients:</strong><br />
                    @foreach (var dishIngredient in dish.DishIngredients)
                    {
                    <span>@dishIngredient.Ingredient.Name (@dishIngredient.Ingredient.Kcal Kcal/100g)</span><br />
                    }
                </p>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@dish.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@dish.Id" class="btn btn-sm btn-danger">Delete</a>
            </div>
        </div>
    </div>
    }
</div>